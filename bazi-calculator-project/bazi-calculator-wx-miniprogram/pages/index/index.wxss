/* pages/index/index.wxss */
.container {
  padding: 20px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: #333;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.dark-mode {
  background-color: #222;
  color: #eee;
}

.dark-mode .card {
  background-color: #333;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

.dark-mode .picker {
  background-color: #444;
  color: #fff;
}

.dark-mode .btn.primary {
  background-color: #4a6bdf;
}

.dark-mode .btn.secondary {
  background-color: #555;
  color: #fff;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.logo {
  display: flex;
  align-items: center;
}

.logo image {
  width: 40px;
  height: 40px;
  margin-right: 10px;
}

.title {
  font-size: 20px;
  font-weight: bold;
}

.actions {
  display: flex;
  align-items: center;
}

.language-selector {
  display: flex;
  margin-right: 15px;
}

.language-btn {
  padding: 4px 8px;
  font-size: 12px;
  border-radius: 4px;
  margin-right: 5px;
  background-color: #eee;
  color: #666;
}

.language-btn.active {
  background-color: #4a6bdf;
  color: white;
}

.dark-mode .language-btn {
  background-color: #444;
  color: #aaa;
}

.dark-mode .language-btn.active {
  background-color: #4a6bdf;
  color: white;
}

.theme-toggle {
  font-size: 20px;
  line-height: 1;
}

.intro-section {
  text-align: center;
  margin-bottom: 30px;
}

.subtitle {
  font-size: 16px;
  color: #666;
}

.dark-mode .subtitle {
  color: #aaa;
}

.card {
  background-color: white;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

.form-title {
  font-size: 18px;
  font-weight: bold;
  display: block;
  margin-bottom: 20px;
  text-align: center;
}

.date-type-switch {
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
}

.switch-btn {
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 14px;
  background-color: #eee;
  margin: 0 5px;
}

.switch-btn.active {
  background-color: #4a6bdf;
  color: white;
}

.dark-mode .switch-btn {
  background-color: #444;
}

.form-group {
  margin-bottom: 15px;
  display: flex;
  align-items: center;
}

.label {
  width: 60px;
  font-size: 16px;
}

.picker {
  flex: 1;
  background-color: #f9f9f9;
  padding: 10px 15px;
  border-radius: 6px;
  font-size: 16px;
}

.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 30px;
}

.btn {
  padding: 10px 0;
  border-radius: 6px;
  font-size: 16px;
  text-align: center;
  width: 48%;
}

.btn.primary {
  background-color: #4a6bdf;
  color: white;
}

.btn.secondary {
  background-color: #eee;
  color: #666;
}

.footer {
  text-align: center;
  font-size: 12px;
  color: #999;
  margin-top: 30px;
}

.dark-mode .footer {
  color: #777;
}