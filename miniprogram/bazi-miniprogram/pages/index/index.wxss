/**index.wxss**/

/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f8f3e9;
  color: #333;
  font-family: "Microsoft YaHei", sans-serif;
}

/* 头部样式 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  width: 100%;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #8C6A56;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #8C6A56;
  opacity: 0.8;
}

/* 日期选择器容器 */
.date-picker-container {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

/* 日历类型选择器 */
.calendar-type-selector {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
  border: 2rpx solid #8C6A56;
}

.calendar-type-selector view {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  background-color: #f8f3e9;
  color: #8C6A56;
  transition: all 0.3s;
}

.calendar-type-selector view.active {
  background-color: #8C6A56;
  color: #fff;
}

/* 日期输入区域 */
.date-inputs {
  margin-bottom: 30rpx;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.input-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.picker-value {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  padding-left: 20rpx;
}

/* 转换后的日期显示 */
.converted-date {
  text-align: center;
  font-size: 26rpx;
  color: #8C6A56;
  margin-bottom: 30rpx;
  padding: 10rpx;
  background-color: #f8f3e9;
  border-radius: 8rpx;
}

/* 计算按钮 */
.calculate-button {
  width: 100%;
  background-color: #8C6A56;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
  margin-top: 20rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
  box-shadow: 0 4rpx 10rpx rgba(140, 106, 86, 0.3);
  transition: all 0.3s;
}

.calculate-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 5rpx rgba(140, 106, 86, 0.3);
}

/* 底部信息 */
.footer {
  margin-top: auto;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}